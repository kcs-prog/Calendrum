#:kivy 2.3.1

<Manager>:
    id: screen_manager
    HomeScreen:

<HomeScreen>:
    id: home_screen
    name: "home"
    MDBoxLayout:
        id: home_layout
        orientation: "vertical"
        spacing: dp(5)
        padding: dp(5)

        MDLabel:
            id: zeit_label
            text: app.uhrzeit
            size_hint_y: 0.2
            font_style: "H4"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            line_color: [0,0,1,1]

        MDBoxLayout:
            id: datum_input_box
            size_hint_y: 0.2
            line_color: [0,0,0,0]

            MDIconButton:
                id: monat_minus_btn
                icon: "chevron-left-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release: app.monat_minus()
                line_color: [0,0,0,0]
            MDLabel:
                id: monat_anzeige
                halign: "center"
                text: app.monate_deutsch[app.monat - 1]
                font_style: "H6"
                pos_hint: {"center_y": 0.5}
                line_color: [0,0,0,0]
            MDIconButton:
                id: monat_plus_btn
                icon: "chevron-right-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release: app.monat_plus()
                line_color: [0,0,0,0]

            MDIconButton:
                id: jahr_plus_btn
                icon: "chevron-left-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release:app.jahr_minus()
                line_color: [0,0,0,0]
            MDLabel:
                id: jahr_anzeige
                halign: "center"
                text: str(app.jahr)
                font_style: "H5"
                pos_hint: {"center_y": 0.5}
                line_color: [0,0,0,0]
            MDIconButton:
                id: jahr_minus_btn
                icon: "chevron-right-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release:app.jahr_plus()
                line_color: [0,0,0,0]

        MDGridLayout:
            id: kalender_grid
            cols: 7
            rows: 6
            line_color: [0,0,1,1]

        MDIconButton:
            id: wecker_btn
            icon: "alarm"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: print("alarm menu hier einbinden")
            line_color: [0,0,0,0]