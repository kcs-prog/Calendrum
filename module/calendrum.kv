#:kivy 2.3.1

# Elemente können mit <KlassenName>: hier angesprochen werden, auch vordefinierte von kivy.
# z.B. <Label>:
#          text: "1" # ALLE Labels beinhalten nun den text "1"
# einzelne Elemente können im jeweiligen <Screen> definiert und verändert werden.
# z.B. <Screen>:
#           Label:
#               text: "1" # Dieses Label beinhaltet den Text "1"


# Alle Screens müssen im <Manager> hinterlegt werden, sonst kann nicht zum Screen gewechselt werden.
<Manager>:
    id: screen_manager
    HomeScreen:

<HomeScreen>:
    id: home_screen
    name: "home"

    # Box, in der sich alle Elemente des Homescreens befinden
    MDBoxLayout:
        id: home_layout
        orientation: "vertical"
        spacing: dp(5)
        padding: dp(5)
        line_color: [1,1,1,1]

        MDLabel:
            id: zeit_label
            text: app._uhrzeit
            size_hint_y: 0.2
            font_style: "H4"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_color: [1,1,1,1]

        # Box für die Auswahlfelder für Jahr und Monat & dazugehörige Anzeige
        MDBoxLayout:
            id: datum_input_box
            size_hint_y: 0.2
            line_color: [0,0,0,0]

            # Monatsauswahl
            MDIconButton:
                id: monat_minus_btn
                name: "monat_minus"
                icon: "chevron-left-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release: app._handle_button_input(self.name)
                line_color: [0,0,0,0]
            MDLabel:
                id: monat_anzeige
                halign: "center"
                text: app._monate_deutsch[app._monat - 1]
                font_style: "H6"
                pos_hint: {"center_y": 0.5}
                line_color: [0,0,0,0]
            MDIconButton:
                id: monat_plus_btn
                name: "monat_plus"
                icon: "chevron-right-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release: app._handle_button_input(self.name)
                line_color: [0,0,0,0]

            # Jahresauswahl
            MDIconButton:
                id: jahr_minus_btn
                name: "jahr_minus"
                icon: "chevron-left-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release: app._handle_button_input(self.name)
                line_color: [0,0,0,0]
            MDLabel:
                id: jahr_anzeige
                halign: "center"
                text: str(app._jahr)
                font_style: "H5"
                pos_hint: {"center_y": 0.5}
                line_color: [0,0,0,0]
            MDIconButton:
                id: jahr_plus_btn
                name: "jahr_plus"
                icon: "chevron-right-circle-outline"
                pos_hint: {"center_y": 0.5}
                on_release: app._handle_button_input(self.name)
                line_color: [0,0,0,0]

        # Grid, in dem sich die jeweiligen Tage des ausgewählten Monats befinden
        MDGridLayout:
            id: kalender_grid
            cols: 7
            rows: 6
            line_color: [1,1,1,1]

        # Button für die Weckerfunktion
        MDIconButton:
            id: wecker_btn
            icon: "alarm"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: app.open_wecker_dialog()
            line_color: [0,0,0,0]